<p id="notice"><%= notice %></p>

<h1>Buildings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Description</th>
      <th>Building type</th>
      <th>Built year</th>
      <th>Square footage</th>
      <th>Building subtype</th>
      <th>Building type</th>
      <th>Hoa dues</th>
      <th>Fee includes</th>
      <th>Hoa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= building.name %></td>
        <td><%= building.address %></td>
        <td><%= building.description %></td>
        <td><%= building.building_type %></td>
        <td><%= building.built_year %></td>
        <td><%= building.square_footage %></td>
        <td><%= building.building_subtype %></td>
        <td><%= building.building_type %></td>
        <td><%= building.HOA_dues %></td>
        <td><%= building.fee_includes %></td>
        <td><%= building.HOA %></td>
        <td><%= link_to 'Show', building %></td>
        <td><%= link_to 'Edit', edit_building_path(building) %></td>
        <td><%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

