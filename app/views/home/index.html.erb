    <!-- Bootstrap Javascript -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script type="text/javascript">
      $(document).ready(function(){
      	
      
      	$('.info-box').children("h5").click(function(){
      		$(this).parent(".info-box").children("p").slideToggle()
      		$(this).toggleClass("blue-bg")
      
      	})
      
      
      	var val1 = 0;
      
      	$('.menu-hamburger').children("img").click(function(){
      
      		if(val1==0){
      			$(this).attr("src","images/cross.png")
      		$('.menu-item').slideToggle()
      
      		val1 = 1;
      	
      	}
      	else {
      		$('.menu-item').slideToggle()
      		$(this).attr("src","images/hamburger.png")
      		val1 = 0;
      
      	}
      	})
      })
      
      
    </script>
