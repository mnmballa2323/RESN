





<section class="insurance_banner">
  <div class="container">
    <div class="banner-text" style="margin-bottom: 335px; margin-top: 90px;">
      <h5>Art</h5>
      <form>
        <input type="text" id="search_buy" placeholder="Enter title or some thing to search art to buy" name="">
        <input class="submit-btn" type="button" value="" name="" onClick="clickButton();">
      </form>
    </div>
  </div>
</section>


<!-- Banner Section Ends Here -->
<section class="homes">
  <div class="container">
    <div class="homes-data">
      <div class="row">
       
      <% @list_arts.all.each do |art| %>
        <%= render 'list_arts/art_card', f: art %>  
      <% end %>
      </div>
    </div>
  </div>
</section>
<hr/>


<script>
function clickButton (){
const value = document.getElementById("search_buy").value;
window.location.href = '/art?search=' + value;
}
</script>
